# Database Configuration
MONGODB_URI=mongodb://localhost:27017/botson-ai
DB_NAME=botson-ai

# Server Configuration
PORT=5000
NODE_ENV=development

# Google Gemini AI Configuration (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.3

# MCP Configuration
MCP_ENABLED=true
MCP_TIMEOUT=30000
MCP_MAX_RETRIES=3

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Import
DATA_SOURCE_URL=https://storage.googleapis.com/feeds-json/feeds/transformedFeeds.json

# Chat Configuration
CHAT_MAX_HISTORY=50
CHAT_RESPONSE_TIMEOUT=30000